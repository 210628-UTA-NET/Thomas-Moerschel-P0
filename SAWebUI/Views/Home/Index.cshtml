@model SAWebUI.Models.CustomerVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="login-form" style = "height 700px; width: 500px; margin: auto;">
    <form asp-action = "Index">
        <h2 class="text-center">Customer Log in</h2>       
        <div class="form-group">
            <input asp-for = "Email" type="text" class="form-control" placeholder="Email" required="required">
        </div>
        <div class="form-group">
            <input asp-for = "Password" type="password" class="form-control" placeholder="Password" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        <div class="clearfix">
            <label class="float-left form-check-label"><input type="checkbox"> Remember me</label>
        </div>        
    </form>
    <p class="text-center"><a asp-action = "Add">Create an Account</a></p>
</div>

