@model IEnumerable<SAWebUI.Models.CustomerVM>

<!DOCTYPE html>
<html>
<head>
        <meta charset="utf-8" />
        <title></title>
</head>
<body>
    <h1>List of Customers:</h1>
    <!-- bootstrap styling for button (autoincluded in VCM) -->
    <a type="button" class="btn btn-secondary" asp-action = "Add">Add Customer</a>

    <table class ="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>PhoneNumber</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(custItem => item.Id)</td>
                    <td>@Html.DisplayFor(custItem => item.Name)</td>
                    <td>@Html.DisplayFor(custItem => item.Address)</td>
                    <td>@Html.DisplayFor(custItem => item.Email)</td>
                    <td>@Html.DisplayFor(custItem => item.PhoneNumber)</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
