@model IList<SAWebUI.Models.LineItemsVM>
<h1>Order Details:</h1>
<table class ="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for(int x = 0; x < Model.Count; x++)
            {
                <tr>
                    <td>@Html.DisplayFor(LineItem => Model[x].Id)</td>
                    <td>@Html.DisplayFor(LineItem => Model[x].Product)</td>
                    <td>@Html.DisplayFor(LineItem => Model[x].Quantity)</td>
                </tr>
            }
            

        </tbody>
    </table>
    <div>
    <h4>Order Total: $@TempData["Price"]</h4>
    </div>
    <a asp-action="Index" class = "btn btn-danger" style ="position:relative; top:10px;">Cancel Order and Log Out</a>
