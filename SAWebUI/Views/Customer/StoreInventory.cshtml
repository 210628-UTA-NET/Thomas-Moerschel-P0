@model IList<SAWebUI.Models.LineItemsVM>
<h1>Store Inventory</h1>
<table class ="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product</th>
                <th>Avaliable Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for(int x = 0; x < Model.Count; x++)
            {
                <tr>
                    <td>@Html.DisplayFor(LineItem => Model[x].Id)</td>
                    <td>@Html.DisplayFor(LineItem => Model[x].Product)</td>
                    <td>@Html.DisplayFor(LineItem => Model[x].Quantity)</td>
                    <td>
                        <form asp-action = "StoreInventory">
		                <input asp-for= "@Model[x].Quantity" size = "4" type="number" class="input" value="1" style = "width:60px"/>
                        <input asp-for= "@Model[x].Id" type = "hidden" value = "@Model[x].Id"/>
                        <input asp-for= "@Model[x].Product" type = "hidden" value = "@Model[x].Product"/>
                        <input asp-for= "@Model[x].storeID" type = "hidden" value = "@Model[x].storeID"/>
                        <input asp-for= "@Model[x].ProductsId" type = "hidden" value = "@Model[x].ProductsId"/>
		                <button type = "submit" class = "btn btn-secondary">Add Inventory</button>
                        </form>
                       
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    <a asp-action="StoreFrontMenu" class = "btn btn-danger" style ="position:relative; top:10px;">Back</a>